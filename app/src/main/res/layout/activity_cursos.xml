<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CursosActivity">

    <ListView
        android:id="@+id/listViewCursos"
        android:layout_width="382dp"
        android:layout_height="536dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="91dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgViewAddCurso"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="abrirInsrtCrs"
            app:srcCompat="@drawable/ic_add"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="22dp" />

        <TextView
            android:id="@+id/txtAddCurso"
            android:layout_width="181dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:onClick="abrirInsrtCrs"
            android:text="Adicionar Novo Curso"
            android:textColor="#0089b6"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="36dp"  />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>